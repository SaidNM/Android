<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewExpresion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:text="@string/TextView_Expresion"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/buttonDigito7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito7_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito8_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito9_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonOperadorDivision"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorDivisio_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

        <Button
            android:id="@+id/buttonOperadorClear"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorClear_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonDigito4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito4_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito5_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito6_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonOperadorMultiplicacion"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorMultiplicacion_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

        <Button
            android:id="@+id/buttonOperadorPotencia"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorExponente_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonDigito1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito1_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito2_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigito3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito3_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonOperadorResta"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorRestar_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

        <Button
            android:id="@+id/buttonOperadorSuma"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="@string/buttonOperadorSumar_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonDigito0"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="@string/buttonDigito0_Text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />

        <Button
            android:id="@+id/buttonDigitoPunto"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDigitos"
            android:onClick="onClick"
            android:text="."
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Digito" />


        <Button
            android:id="@+id/buttonOperadorIgual"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colodOperadores"
            android:onClick="onClick"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_Operador" />

    </LinearLayout>

</LinearLayout>